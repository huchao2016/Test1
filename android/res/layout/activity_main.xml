<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/container_tab"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_gray"
        android:orientation="vertical" >
    </LinearLayout>

    <View style="@style/view_line" />

    <RadioGroup
        android:id="@+id/main_tab_RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_home"
            style="@style/main_tab"
            android:drawableTop="@drawable/icon_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/radio_fabao"
            style="@style/main_tab"
            android:drawableTop="@drawable/icon_fabao"
            android:text="发包" />

        <RadioButton
            android:id="@+id/radio_communication"
            style="@style/main_tab"
            android:drawableTop="@drawable/icon_communication"
            android:text="交流" />

        <RadioButton
            android:id="@+id/radio_info"
            style="@style/main_tab"
            android:drawableTop="@drawable/icon_info"
            android:text="资讯" />

        <RadioButton
            android:id="@+id/radio_mine"
            style="@style/main_tab"
            android:drawableTop="@drawable/icon_mine"
            android:text="我的" />
    </RadioGroup>

</LinearLayout>