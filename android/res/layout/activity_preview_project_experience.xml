<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/title_short" >

        <ImageView
            android:id="@+id/btn_edit_experience_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back_btn"
            android:clickable="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/project_title"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_project_name_bule" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="项目名称" />
            </LinearLayout>

            <LinearLayout style="@style/mine_scrollview_layout" >

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />

                <EditText
                    android:id="@+id/et_project_title_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:editable="false"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_project_time_bule" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="项目开始时间" />
            </LinearLayout>

            <LinearLayout style="@style/mine_scrollview_layout" >

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />

                <EditText
                    android:id="@+id/edit_et_project_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_project_time_bule" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="项目完成时间" />
            </LinearLayout>

            <LinearLayout style="@style/mine_scrollview_layout" >

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />

                <EditText
                    android:id="@+id/edit_et_project_finish_date"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout
                style="@style/mine_scrollview_layout"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_project_introduce_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bao_pingjia_bg"
                    android:editable="false"
                    android:ems="10"
                    android:gravity="left|top"
                    android:maxLines="6"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:textSize="14sp" >
                </EditText>
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_project_people_bule" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="证明人" />
            </LinearLayout>

            <LinearLayout style="@style/mine_scrollview_layout" >

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />

                <EditText
                    android:id="@+id/et_project_people_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:editable="false"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_project_mobile_bule" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="证明人电话" />
            </LinearLayout>

            <LinearLayout style="@style/mine_scrollview_layout" >

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />

                <EditText
                    android:id="@+id/et_project_mobile_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:editable="false"
                    android:paddingLeft="5dp"
                    android:textSize="14sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <View
                    android:layout_width="45dip"
                    android:layout_height="fill_parent" />

                <Button
                    android:id="@+id/btn_edit_experience_save"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/btn_save" />

                <View
                    android:layout_width="45dip"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>