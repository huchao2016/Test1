<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/title_short" >

        <ImageView
            android:id="@+id/btn_task_details_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back_btn"
            android:clickable="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/task_details_title"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_task_details_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_label" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="任务分类" />

                <TextView
                    android:id="@+id/tv_task_details_label"
                    style="@style/mine_scrollview_textview_content" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_title" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="任务标题" />

                <TextView
                    android:id="@+id/tv_task_details_title"
                    style="@style/mine_scrollview_textview_content" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_budget" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="任务预算" />

                <TextView
                    android:id="@+id/tv_task_details_budget"
                    style="@style/mine_scrollview_textview_content" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_delivery" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="交付日期" />

                <TextView
                    android:id="@+id/tv_task_details_delivery"
                    style="@style/mine_scrollview_textview_content" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_city" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="所在城市" />

                <TextView
                    android:id="@+id/tv_task_details_city"
                    style="@style/mine_scrollview_textview_content" />
            </LinearLayout>

            <View style="@style/view_line" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp" />

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_overview" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="任务概述" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <TextView
                    android:id="@+id/tv_task_details_overview"
                    style="@style/mine_scrollview_textview"
                    android:layout_marginLeft="45dp"
                    android:minHeight="50dp"
                    android:textSize="13sp" />
            </LinearLayout>

            <View style="@style/view_line" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp" />

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_ziliao" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="任务需求资料" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ListView
                    android:id="@+id/task_details_demand_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gray"
                    android:divider="#000000"
                    android:dividerHeight="0.1dp" />
            </LinearLayout>

            <View style="@style/view_line" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp" />

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_contact"
                    android:visibility="gone" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="发包方联系方式"
                    android:textSize="18sp" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_fabaofang" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="发包方" />

                <TextView
                    android:id="@+id/tv_task_details_fabaofang"
                    style="@style/mine_scrollview_textview_content" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_mobile" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="手机号码" />

                <TextView
                    android:id="@+id/tv_task_details_mobile"
                    style="@style/mine_scrollview_textview_content" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_email" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="邮箱" />

                <TextView
                    android:id="@+id/tv_task_details_email"
                    style="@style/mine_scrollview_textview_content" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_qq" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="QQ" />

                <TextView
                    android:id="@+id/tv_task_details_qq"
                    style="@style/mine_scrollview_textview_content" />
            </LinearLayout>

            <View style="@style/view_line" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp" />

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:layout_marginLeft="45dp"
                    android:text="我的报价" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_budget" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="任务报价" />
            </LinearLayout>

            <LinearLayout style="@style/mine_scrollview_layout" >

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />

                <EditText
                    android:id="@+id/et_task_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:hint="请输入金额（元）"
                    android:numeric="decimal"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_delivery" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="承诺交付日期" />
            </LinearLayout>

            <LinearLayout style="@style/mine_scrollview_layout" >

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />

                <EditText
                    android:id="@+id/et_task_date"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:hint="点击以选择日期"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_task_time"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@drawable/border"
                    android:hint="请输入周期（天）"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <View style="@style/view_line" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp" />

            <View style="@style/view_line" />

            <LinearLayout style="@style/mine_scrollview_layout" >

                <ImageView
                    style="@style/mine_scrollview_image"
                    android:src="@drawable/icon_bao_overview" />

                <TextView
                    style="@style/mine_scrollview_textview"
                    android:text="竞标说明" />
            </LinearLayout>

            <View style="@style/view_line" />

            <LinearLayout
                style="@style/mine_scrollview_layout"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_task_details_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bao_pingjia_bg"
                    android:ems="10"
                    android:gravity="left|top"
                    android:hint="请输入竞标说明"
                    android:inputType="textMultiLine"
                    android:maxLines="6"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:textSize="14sp" >
                </EditText>
            </LinearLayout>

            <View style="@style/view_line" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="gone" >

                <View
                    android:layout_width="45dip"
                    android:layout_height="fill_parent" />

                <Button
                    android:id="@+id/btn_task_details_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/submit" />

                <View
                    android:layout_width="45dip"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>